<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="opit_notes_leave.leave_calculation_service.class">Opit\Notes\LeaveBundle\Service\LeaveCalculationService</parameter>
    </parameters>

    <services>
        <service id="opit_notes_leave.leave_calculation_service" lazy="true" class="%opit_notes_leave.leave_calculation_service.class%">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument>%leave_calculation_options%</argument>
        </service>
    </services>

</container>
