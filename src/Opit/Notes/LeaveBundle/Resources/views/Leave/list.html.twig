{% extends 'OpitNotesUserBundle::layout.html.twig' %}
{% block title %}
        Leave request list - {{ parent() }}
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {% javascripts
        '@OpitNotesLeaveBundle/Resources/public/js/list.coffee'
    output='js/opitnotesleave/list.js' filter='?yui_js' %}
        <script type="text/javascript" src="{{ asset_url }}" ></script>
    {% endjavascripts %}
{% endblock %}
{% block stylesheets %}
    {% stylesheets
        '../app/Resources/public/css/list.css'
    output='css/opitnotesholiday/list.css' filter='?yui_css,cssrewrite' %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}
{% block body %}
    <h1>Leave request list</h1>
    {% include 'OpitNotesLeaveBundle:Leave:_searchForm.html.twig' with { 'order_field': 'id' } %}
    <table>
        <tr>
            <td class="padding-0">
                <a href="{{ path('OpitNotesLeaveBundle_leave_show') }}"><button id="add" class="button"><i class="fa fa-plus-square fa-1x"></i>Add</button></a>
                <button id="delete" class="button delete button-disabled" disabled="disabled"><i class="fa fa-trash-o fa-1x"></i>Delete</button>
            </td>
        </tr>
    </table>
    <div id="list-reply-message"></div>
    <div id="leave-entitlement" class="background-color-light-grey margin-bottom-10 padding-10 border-radius-5">
        <strong>Annual leave entitlement:</strong> {{ leaveDays }} day(s).
    </div>
    <div id="leave_list">
        {% include 'OpitNotesLeaveBundle:Leave:_list.html.twig' %}
    </div>    
{% endblock %}