{% extends 'OpitNotesUserBundle::layout.html.twig' %}
{% block title %}
    Administrative leave/working day list - {{ parent() }}
{% endblock %}

{% block stylesheets %}
    {% include '::_stylesheets.html.twig' %}
    {% stylesheets
        '@OpitNotesLeaveBundle/Resources/public/css/listLeaveDates.scss'
    output='css/opitnotesleave/list_leave_dates.css' filter='?yui_css,cssrewrite' %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}

{% block body %}
<h1>Administrative leave/working day list</h1>
<div  id="list">
    {% include 'OpitNotesLeaveBundle:Admin:_searchForm.html.twig' with { 'order_field': 'id' } %}
    
    <table>
        <tr>
            <td class="padding-0">
                <button id="addLeaveDate" class="button"><i class="fa fa-plus-square fa-1x"></i>Add</button>
                <button id="delete" class="button delete"><i class="fa fa-trash-o fa-1x"></i>Delete</button>
            </td>
        </tr>
    </table>
    
    <div id="list-reply-message"></div>
    <form id="form-leavedate">
        {% include 'OpitNotesLeaveBundle:Admin:_listLeaveDates.html.twig' %}
    </form>
</div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {% javascripts
        '@OpitNotesLeaveBundle/Resources/public/js/Admin/listLeaveDates.coffee'
        '@OpitNotesUserBundle/Resources/public/js/list.coffee'
    output='js/opitnotesleave/admin/list_dates.js' filter='?yui_js' %}
        <script type="text/javascript" src="{{ asset_url }}" ></script>
    {% endjavascripts %}
{% endblock %}
