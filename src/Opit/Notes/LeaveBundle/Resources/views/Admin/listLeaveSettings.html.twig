{% extends 'OpitNotesUserBundle::layout.html.twig' %}
{% block title %}
Entitlement configuration - {{ parent() }}
{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('bundles/opitnotestravel/css/module.css') }}" />
{% endblock %}
{% block body %}
<h1>Entitlement configuration</h1>
<div class="dialog-description">Entitlement configuration can be set from here. This values will be used for the leave days calculation.</div>
{% if isEnabled  %}
    <div  id="list">
        <div id="list-reply-message"></div>
        <div id="reply-message"></div>
        <form id="list-settings">
            {% include 'OpitNotesLeaveBundle:Admin:_listLeaveSettings.html.twig' %}
        </form>
        </div>
        <a href=""><button id="save" class="button">Save</button></a>
    </div>
{% else %}
    <h3>
        The entitlement configuration is disabled.
    </h3>
{% endif %}
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {% javascripts
        '@OpitNotesLeaveBundle/Resources/public/js/Admin/listLeaveSettings.coffee'
    output='js/opitnotesleave/leave_setting.js' filter='?yui_js' %}
    <script type="text/javascript" src="{{ asset_url }}" ></script>
    {% endjavascripts %}
{% endblock %}

