{% extends 'OpitNotesCoreBundle::layout.html.twig' %}
{% block title %}
        Team leaves calendar - {{ parent() }}
{% endblock %}
{% block stylesheets %}
    {% stylesheets
        'libs/fullcalendar/css/fullcalendar.css'
    output='css/opitnotesleave/fullcalendar.css' filter='?yui_css,cssrewrite' %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {% javascripts
        'libs/fullcalendar/js/fullcalendar.min.js'
        '@OpitNotesLeaveBundle/Resources/public/js/Calendar/teamLeavesCalendar.coffee'
    output='js/opitnotesleave/team_leaves_calendar.js' filter='?yui_js' %}
        <script type="text/javascript" src="{{ asset_url }}" ></script>
    {% endjavascripts %}
{% endblock %}
{% block body %}
    <h1 class="width-55">Team leaves calendar</h1>
    <hr class="width-55" />
    <div id="team-leaves-calendar" class="width-55"></div>
    <hr class="width-55" />
    <h2 class="width-55">Team employees</h2>
    <div class="margin-bottom-20 display-block width-55">
    {% for employee in employees %}
        {% set employeeClass = employee.employeeName|replace(' ', '_') ~ '-' ~ employee.id %}
        <div class="display-inline-block padding-10 border-radius-5 padding-top-2 padding-bottom-2 margin-bottom-5 color-white team-employee {{ employeeClass }}" data-class="{{ employeeClass }}">
            {{ employee.employeeName }}
            <br />
            <span class="font-size-d8-em">
                {{ employee.user.email }}
            </span>
        </div>
    {% endfor %}
    </div>
    
{% endblock %}