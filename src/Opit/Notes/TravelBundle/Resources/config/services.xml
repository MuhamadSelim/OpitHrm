<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">


    <parameters>
        <parameter key="opit.model.travel_expense.class">Opit\Notes\TravelBundle\Model\TravelExpenseService</parameter>
        <parameter key="opit.model.travel_request.class">Opit\Notes\TravelBundle\Model\TravelRequestService</parameter>
        <parameter key="opit.manager.travel_status_manager.class">Opit\Notes\TravelBundle\Manager\TravelStatusManager</parameter>
        <parameter key="opit.component.email_manager.class">Opit\Component\Email\EmailManager</parameter>
        <parameter key="opit.manager.travel_notification_manager.class">Opit\Notes\TravelBundle\Manager\TravelNotificationManager</parameter>
        <parameter key="opit.manager.pdf_manager.class">Opit\Notes\TravelBundle\Manager\PDFManager</parameter>
        <parameter key="opit.security.acl.voter.class">Opit\Notes\TravelBundle\Manager\AclManager</parameter>
        <parameter key="opit.listener.xml_http_session_expired_listener.class">Opit\Notes\TravelBundle\EventListener\XMLHttpSessionExpiredListener</parameter>
        <parameter key="opit.twig.opit_travel_bundle_extension.class">Opit\Notes\TravelBundle\Twig\OpitExtension</parameter>
    </parameters>
    <services>
        <service id="opit.model.travel_expense" class="%opit.model.travel_expense.class%">
            <argument type="service" id="security.context" />
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument type="service" id="rate.exchange_service" />
            <argument>%exchange_rate%</argument>
        </service>
        <service id="opit.model.travel_request" class="%opit.model.travel_request.class%">
            <argument type="service" id="security.context" />
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument type="service" id="opit.manager.travel_status_manager" />
            <argument type="service" id="opit.security.acl.manager" />
            <argument type="service" id="opit.manager.travel_notification_manager" />
        </service>
        <service id="opit.manager.travel_status_manager" class="%opit.manager.travel_status_manager.class%">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument type="service" id="security.encoder_factory" />
            <argument type="service" id="router" />
            <argument type="service" id="opit.model.travel_expense" />
            <argument type="service" id="opit.component.email_manager" />
            <argument>%opit_notes_travel%</argument>
            <call method="setRequest">
                <argument type="service" id="request" on-invalid="null" strict="false" />
            </call>
        </service>
        <service id="opit.component.email_manager" class="%opit.component.email_manager.class%">
            <argument type="service" id="mailer" />
            <argument type="service" id="templating" />
            <argument type="service" id="logger" on-invalid="null" />
            <argument>%opit_notes_travel%</argument>
        </service>
        <service id="opit.manager.pdf_manager" class="%opit.manager.pdf_manager.class%"></service>
        <service id="rate.exchange_service" alias="opit.service.exchange_rates" />
        <service id="opit.manager.travel_notification_manager" class="%opit.manager.travel_notification_manager.class%">
            <argument type="service" id="doctrine.orm.entity_manager" />
        </service>
        <service id="opit.security.acl.manager" class="%opit.security.acl.voter.class%">
            <argument type="service" id="security.acl.dbal.provider" />
            <argument type="service" id="logger" on-invalid="null" />
        </service>
        <service id="opit.listener.xml_http_session_expired_listener" class="%opit.listener.xml_http_session_expired_listener.class%">
            <tag name="kernel.event_listener" event="kernel.response" method="onKernelResponse" />
        </service>
        <service id="opit.twig.opit_travel_bundle_extension.class" class="%opit.twig.opit_travel_bundle_extension.class%">
            <tag name="twig.extension" />
        </service>
    </services>
</container>