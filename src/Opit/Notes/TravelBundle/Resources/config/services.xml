<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">


    <parameters>
        <parameter key="opit.service.exchange_rates.class">Opit\Notes\CurrencyRateBundle\Service\ExchangeRateService</parameter>
        <parameter key="opit.model.travel_expense.class">Opit\Notes\TravelBundle\Model\TravelExpenseService</parameter>
        <parameter key="opit.model.travel_request.class">Opit\Notes\TravelBundle\Model\TravelRequestService</parameter>
        <parameter key="opit.manager.status_manager.class">Opit\Notes\TravelBundle\Manager\StatusManager</parameter>
        <parameter key="opit.manager.email_manager.class">Opit\Notes\TravelBundle\Manager\EmailManager</parameter>
        <parameter key="opit.manager.notification_manager.class">Opit\Notes\TravelBundle\Manager\NotificationManager</parameter>
        <parameter key="opit.manager.pdf_manager.class">Opit\Notes\TravelBundle\Manager\PDFManager</parameter>
    </parameters>
    <services>
        <service id="opit.model.travel_expense" class="%opit.model.travel_expense.class%">
            <argument type="service" id="security.context" />
            <argument type="service" id="doctrine.orm.entity_manager" />
        </service>
        <service id="opit.model.travel_request" class="%opit.model.travel_request.class%">
            <argument type="service" id="security.context" />
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument type="service" id="security.acl.dbal.provider" />
            <argument type="service" id="opit.manager.status_manager" />
        </service>
        <service id="opit.manager.status_manager" class="%opit.manager.status_manager.class%">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument type="service" id="opit.manager.email_manager" />
            <argument type="service" id="security.encoder_factory" />
            <argument type="service" id="service_container" />
            <call method="setRequest">
                <argument type="service" id="request" on-invalid="null" strict="false" />
            </call>
        </service>
        <service id="opit.manager.email_manager" class="%opit.manager.email_manager.class%">
            <argument type="service" id="mailer" />
            <argument type="service" id="templating" />
            <argument type="service" id="security.context" />
            <argument>%opit_notes_travel%</argument>
        </service>
        <service id="opit.manager.pdf_manager" class="%opit.manager.pdf_manager.class%"></service>
        <service id="opit.service.exchange_rates" class="%opit.service.exchange_rates.class%">
                <argument type="service" id="doctrine.orm.entity_manager" />
        </service>
        <service id="opit.manager.notification_manager" class="%opit.manager.notification_manager.class%">
            <argument type="service" id="doctrine.orm.entity_manager" />
        </service>
    </services>
</container>