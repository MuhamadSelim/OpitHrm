{% extends 'OpitNotesCoreBundle::layout.html.twig' %}
{% block title %}
Per Diem list - {{ parent() }}
{% endblock %}
{% block stylesheets %}
    {% stylesheets
        '@OpitNotesTravelBundle/Resources/public/css/module.scss'
    output='css/opitnotestravel/list_per_diem.css' filter='?yui_css,cssrewrite' %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}
{% block body %}
<h1 class="margin-bottom-01em-important">Per diem configuration</h1>
<div class="listing-description">Per diem can be configured from here.It is used while calculating employee travel expense.</div>
<div  id="list">
    <div id="list-reply-message"></div>
    <div id="reply-message"></div>
    <form class="formFieldset margin-bottom-20 padding-10">
        <div class="container">
        {% include 'OpitNotesTravelBundle:Admin:_listPerDiem.html.twig' %}
        </div>
        <span id="addPerDiem" class="addFormFieldsetChild formFieldsetButton form-fieldset-add-button margin-left-0-important">
            <i class="fa fa-plus-square"></i>
            Add Per diem
        </span>
    </form>
    <a href="{{ path('OpitNotesUserBundle_admin_save_perdiem') }}"><button id="save" class="button">Save</button></a>
</div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {% javascripts
        '@OpitNotesTravelBundle/Resources/public/js/Admin/perDiem.coffee'
    output='js/opitnotestravel/admin/per_diem.js' filter='?yui_js' %}
    <script type="text/javascript" src="{{ asset_url }}" ></script>
    {% endjavascripts %}
{% endblock %}

