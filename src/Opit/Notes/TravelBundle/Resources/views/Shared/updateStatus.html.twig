{% extends '::base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    {% stylesheets
        '@OpitNotesTravelBundle/Resources/public/css/updateStatus.css'
    output='css/opitnotestravel/status.css' filter='?yui_css,cssrewrite' %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}
{% block body %}
<div class="align-center margin-bottom-10">
    <a href="{{ path('OpitNotesTravelBundle_travel_list') }}" id="siteLogo" class="clearfix text-decoration-none">
        <span class="color-black align-center display-block">NOTES</span>
        <span class="color-light-green align-center">New OPIT Travel Expense System</span>
    </a>
</div>
<div id="travelStatus">
{% if 'post' == method %}
<h2>Status of travel {{ travelTypeName }} successfully updated to "{{ status }}".</h2>
<h4>
    You can go to <a href="{{ path('OpitNotesTravelBundle_travel_list') }}">NOTES</a> project or simply close the tab.
</h4>
{% else %}
<h2>Update status of travel {{ travelTypeName }} to "{{ status }}".</h2>
<form method="post" action="{{ app.request.uri }}">
    <input type="submit" class="button" value="Update" />
</form>
</div>
{% endif %}
{% endblock %}