<section id="searchFormWrapper">
    <h3 id="searchFormTitle">
        <i class="fa fa-chevron-up default-right"></i>
        Search Options
    </h3>

    <form id="searchTravelForm" method="post" action="{{ path('OpitNotesTravelBundle_travel_search') }}">
        <div id="searchFormProperties">
            <div class="searchProperty">
                <label for="searchTrId">ID</label>
                <input type="text" name="trId" id="searchTrId" />
            </div>
            <div class="searchProperty">
                <label for="searchEmployeeName">Employee name</label>
                <input type="text" name="employeeName" id="searchEmployeeName" />
            </div>
            <div class="searchProperty">
                <label for="searchOpportunityName">Opportunity Name</label>
                <input type="text" name="opportunityName" id="searchOpportunityName" />
            </div>
            <div class="searchProperty">
                <label for="searchDestinationName">Destination Name</label>
                <input type="text" name="destinationName" id="searchDestinationName" />
            </div>
            <br />
            <div class="searchProperty">
                <label for="searchDepartureDateFrom">Departure date from</label>
                <input type="date" name="departureDateFrom" id="searchDepartureDateFrom" />
            </div>
            <div class="searchProperty">
                <label for="searchDepartureDateTo">Departure date to</label>
                <input type="date" name="departureDateTo" id="searchDepartureDateTo" />
            </div>
            <div class="searchProperty">
                <label for="searchArrivalDateFrom">Arrival date from</label>
                <input type="date" name="arrivalDateFrom" id="searchArrivalDateFrom" />
            </div>
            <div class="searchProperty">
                <label for="searchArrivalDateTo">Arrival date to</label>
                <input type="date" name="arrivalDateTo" id="searchArrivalDateTo" />
            </div>
        </div>
        <div id="searchFormButtons">
            <button class="button search" id="searchButton" type="submit"><i class="fa fa-search"></i>Search</button>
            <button class="button reset" id="resetButton" type="reset"><i class="fa fa-refresh"></i>Reset</button>
        </div>
    </form>
</section>
