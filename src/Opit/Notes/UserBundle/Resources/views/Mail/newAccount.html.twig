{% set loginPageLink %}
<a href="{{ path('OpitNotesUserBundle_security_login') }}">
    NOTES
</a>
{% endset %}
<div style="margin: 0 0 10px 0;">Hi {{ templateVars['user'].employee.employeeNameFormatted }}</div>
<div style="margin: 0 0 10px 0;">
    Welcome to {{ loginPageLink }} (New Opit Travel Expense System).
    You can now log into {{ loginPageLink }} by using the following.
</div>
<table cellpadding="5" style="background: #0C090A; width: 400px; font-size: 12px; color: white; border-bottom: 1px solid #94c11c;">
    <tr>
        <td colspan="2"><font style="color:#94c11c; font-size: 13px;"><u>Credentials</u></font><br /></td>
    </tr>
    <tr>
        <td width="20%"><strong>Username:</strong></td>
        <td>{{ templateVars['user'].userName }}</td>
    </tr>
    <tr>
        <td><strong>Password:</strong></td>
        <td>{{ templateVars['password'] }}</td>
    </tr>
</table>
{% include 'OpitNotesCoreBundle:Mail:footer.html.twig' %}