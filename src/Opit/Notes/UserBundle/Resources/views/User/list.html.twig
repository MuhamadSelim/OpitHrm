{% extends 'OpitNotesUserBundle::layout.html.twig' %}

{% block body %}
    {% include 'OpitNotesUserBundle:Shared:_searchForm.html.twig' %}

    <div id="userlistWrapper">
        <div  id="list">
            <table>
                <tr>
                    <td class="no-padding">
                        <button id="add" class="button"><i class="fa fa-plus-square fa-1x"></i>Add</button>
                        <button id="delete" class="button delete"><i class="fa fa-trash-o fa-1x"></i>Delete</button>
                    </td>
                </tr>
            </table>
        {% include 'OpitNotesUserBundle:Shared:_list.html.twig' with {
            'propertyNames': propertyNames,
            'propertyValues': propertyValues
        } %}
        </div>
    </div>
{% endblock %}
{% block scripts %}
    {{ parent() }}
    <script>
    $.extend(true, $(document).data('OpitNotesUserBundle'), {
        urls: {
            {% for key, url in urls %}
            '{{ key }}': '{{ url }}',
            {% endfor %}
        }
    });
    </script>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {% javascripts
        '@OpitNotesUserBundle/Resources/public/js/list.js'
    output='js/notes_list.js' filter='?yui_js' %}
        <script type="text/javascript" src="{{ asset_url }}" ></script>
    {% endjavascripts %}
{% endblock %}