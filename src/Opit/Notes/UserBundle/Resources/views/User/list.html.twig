{% extends 'OpitNotesUserBundle::layout.html.twig' %}
{% block title %}
    User list - {{ parent() }}
{% endblock %}
{% block body %}
<h1>User list</h1>
    {% include 'OpitNotesUserBundle:Shared:_searchForm.html.twig' with { 'order_field': 'id' } %}
    <div id="userlistWrapper">
        <table>
            <tr>
                <td class="no-padding">
                    <button id="add" class="button"><i class="fa fa-plus-square fa-1x"></i>Add</button>
                    <button id="delete" class="button delete"><i class="fa fa-trash-o fa-1x"></i>Delete</button>
                </td>
            </tr>
        </table>
        <div id="list-reply-message"></div>
        <div id="user-list">
            {% include 'OpitNotesUserBundle:Shared:_list.html.twig' %}
        </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {% javascripts
        '@OpitNotesUserBundle/Resources/public/js/list.js'
    output='js/notes_list.js' filter='?yui_js' %}
        <script type="text/javascript" src="{{ asset_url }}" ></script>
    {% endjavascripts %}
{% endblock %}