{% extends 'OpitNotesCoreBundle::layout.html.twig' %}
{% block title %}
    Role list - {{ parent() }}
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        var valueForm = 'groupForm';
        var valueField = 'group';
        var url = 'OpitNotesUserBundle_admin_groups_show';
        var removeUrl = 'OpitNotesUserBundle_admin_groups_delete';
        var propertyName = 'role';
        var propertyNameCapital = 'Role';
    </script>
    {% javascripts
        '@OpitNotesUserBundle/Resources/public/js/Admin/et_role_funcs.coffee'
        output='js/opitnotesuser/admin_groups_list.js' filter='?yui_js' %}
        <script type="text/javascript" src="{{ asset_url }}" ></script>
    {% endjavascripts %}    
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {% include '::_stylesheets.html.twig' %}
{% endblock %}

{% block body %}
<h1 class="margin-bottom-01em-important">Role list</h1>
<div class="listing-description">Roles can be created from here.They can be assigned to users to manage their access in the portal.</div>
    <table>
        <tr>
            <td class="padding-left-0">
                <button id="add" class="button"><i class="fa fa-plus-square fa-1x"></i>Add</button>
                <button id="delete" class="button delete"><i class="fa fa-trash-o fa-1x"></i>Delete</button>
            </td>
        </tr>
    </table>
    <div id="list-reply-message"></div>
    {% include 'OpitNotesUserBundle:Shared:_list.html.twig' with {
        'propertyNames': propertyNames,
        'propertyValues': propertyValues,
        'hideReset': hideReset
        } %}
    {% include 'OpitNotesUserBundle:Shared:_dialog.html.twig' with {
        'fieldName': 'group',
        'fieldLabel': 'Role name'
    } %}
{% endblock %}    