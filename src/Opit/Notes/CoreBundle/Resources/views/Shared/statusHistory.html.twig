{# Status history template used by CoreBundle:StatusHistory.coffee class #}
<div id="status-history" class="font-size-d9-em">
    {% for key, element in elements %}
    <section id="{{ key }}" class="margin-bottom-20">
        <h3 class="dialog-table-title">{{ element.title }} History</h3>
        <table class="bordered">
            <thead>
                <th></th>
                <th class="white-space-nowrap">Created on</th>
                <th class="white-space-nowrap">Created by</th>
                <th>Comment</th>
            </thead>
            {% for item in element.collection %}
            <tbody>
                <tr>
                    <td class="width-small white-space-nowrap">{{ item.status.name }}</td>
                    <td class="width-24">{{ item.created|date('Y-m-d H:i') }}</td>
                    <td class="width-24">{{ item.createdUser is empty ? 'n/a' : item.createdUser.employee.employeeName }}</td>
                    <td>{{ item.comment is not null ? item.comment.content : '' }}</td>
                </tr>
            </tbody>
            {% endfor %}
        </table>
        {% if element.collection|length == 0 %}
        <div class="padding-5">There is no status history</div>
        {% endif %}
    </section>
    {% endfor %}
</div>
