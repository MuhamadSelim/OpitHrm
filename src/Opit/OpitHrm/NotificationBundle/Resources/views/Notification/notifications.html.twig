{% if not travelRequests|length and not travelExpenses|length and not leaveRequests|length and not jobPositions|length and not applicants|length %}
<h5 class="align-center">You have no new notifications.</h5>
{% endif %}

{% if travelRequests|length %}
<h5 class="notification-type-title">Travel request</h5>
{% endif %}
{% for travelRequest in travelRequests %}
    <div class="notification {% if 2 == travelRequest.read.id %}unread{% endif %}">
        <div class="notification-header">
            <div class="notification-header-datetime">
                {{ travelRequest.dateTime|date('Y-m-d H:i:s') }}
            </div>
            <div class="notification-header-delete">
                <i class="fa fa-trash-o" data-id="{{ travelRequest.id }}"></i>
            </div>
        </div>
        <div class="notification-message" data-id="{{ travelRequest.id }}">
            {% set msg = travelRequest.message %}
            {{ msg }}
            {% if 'approved' not in msg and 'rejected' not in msg %}
            <a class="notification-details" href="{{ path('OpitOpitHrmTravelBundle_travel_show', { 'id': travelRequest.travelRequest.id}) }}">
                details
            </a>
            {% endif %}
        </div>
    </div>
{% endfor %}
