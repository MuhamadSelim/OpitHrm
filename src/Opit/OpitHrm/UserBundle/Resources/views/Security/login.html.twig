{% extends '::base.html.twig' %}
{% block stylesheets %}
    {% stylesheets 
        '@OpitOpitHrmUserBundle/Resources/public/css/login.scss'
    output='css/opithrmuser/login.css' filter='?yui_css,cssrewrite' %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {% javascripts
        '@OpitOpitHrmUserBundle/Resources/public/js/login.coffee'
        output='js/opithrmuser/login.js' filter='?yui_js' %}
        <script type="text/javascript" src="{{ asset_url }}" ></script>
    {% endjavascripts %}
{% endblock %}            
            
{% block body %}
<div id="mainWrapper" class="margin-center margin-top-30">
    <div id="welcomeWrapper" class="float-left">
        <div id="welcomeText" class="color-black align-left">
            {% if (application_name is defined and application_name != 'OPIT-HRM') %}
                {{ application_name is not empty ? application_name : 'OPIT-HRM' }}
            {% else %}
                <img src="{{ asset('images/logo.png') }}" width="170" alt="" />
            {% endif %}
            <div class="margin-top-100">
                <span class="bold">H</span>uman<br />
                <span class="bold">R</span>esource<br />
                <span class="bold color-ferrari-red">M</span>anagement
            </div>
        </div>
        <div id="loginForm" class="margin-top-100">
            {% if error %}
                <div class="error color-red margin-bottom-10">{{ error.message }}</div>
            {% endif %}
            {{ form(form, {'action': path('OpitOpitHrmUserBundle_check'), 'method': 'POST', 'id':'login' }) }}
        </div>
    </div>
    <div id="featuresForm" class="float-right">
        <div class="home-box width-100">
            <div class="float-left margin-top-30">
                <h1><i class="fa fa-cogs color-light-green"></i>  Admininstration</h1>
            </div>
            <div class="float-right margin-top-30 margin-right-15 width-200">
                <ul class="fa-ul">
                    <li><i class="fa-li fa fa-check-square color-light-green"></i>User Management</li>
                    <li><i class="fa-li fa fa-check-square color-light-green"></i>Travel Management</li>
                    <li><i class="fa-li fa fa-check-square color-light-green"></i>Leave Management</li>
                </ul>
            </div>
        </div>
        <div class="home-box width-100">
            <div class="float-left margin-top-30">
                <h1><i class="fa fa-bar-chart-o color-light-green"></i>  Reports </h1>
            </div>
            <div class="float-right margin-top-30 margin-right-15 width-200">
                <ul class="fa-ul">
                    <li><i class="fa-li fa fa-check-square color-light-green"></i>Generate Time Sheets</li>
                    <li><i class="fa-li fa fa-check-square color-light-green"></i>View Time Sheets</li>
                </ul>
            </div>
        </div>
        <div class="home-box width-100">
            <div class="float-left margin-top-30">
                <h1><i class="fa fa-tags color-light-green"></i>  Modules</h1>
            </div>
            <div class="float-right align-left margin-top-30 margin-right-15 width-200">
                <ul class="fa-ul">
                    <li><i class="fa-li fa fa-check-square color-light-green"></i>Travel Management</li>
                    <li><i class="fa-li fa fa-check-square color-light-green"></i>Leave Management</li>
                    <li><i class="fa-li fa fa-check-square color-light-green"></i>Hiring Management</li>
                </ul>
            </div>
        </div>
        <div class="home-box width-100">
            <div class="float-left margin-top-30">
                <h1><i class="fa fa-plus-square color-light-green"></i>  Others</h1>
            </div>
            <div class="float-right align-left margin-top-30 margin-right-15 width-200">
                <ul class="fa-ul">
                    <li><i class="fa-li fa fa-check-square color-light-green"></i>WorkFlow Support</li>
                    <li><i class="fa-li fa fa-check-square color-light-green"></i>Easy LDAP Integration</li>
                    <li><i class="fa-li fa fa-check-square color-light-green"></i>Currency Conversion</li>
                    <li><i class="fa-li fa fa-check-square color-light-green"></i>Team Calendar</li>
                </ul>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{# Remove the footer from the login template #}
{% block footer %}{% endblock %}