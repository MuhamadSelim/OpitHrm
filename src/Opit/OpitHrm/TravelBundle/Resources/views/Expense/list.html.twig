{% extends 'OpitOpitHrmCoreBundle::layout.html.twig' %}
{% block title %}
        Travel expense list - {{ parent() }}
{% endblock %}
{% block body %}
<h1>Travel expense list</h1>
{% include 'OpitOpitHrmTravelBundle:Expense:_searchForm.html.twig' %}
<table>
    <tr>
        <td class="padding-left-0">
            <button id="add" class="button"><i class="fa fa-plus-square fa-1x"></i>Add</button>
            <button id="delete" class="button delete expense"><i class="fa fa-trash-o fa-1x"></i>Delete</button>
        </td>
    </tr>
</table>
{% include 'OpitOpitHrmTravelBundle:Expense:_list.html.twig' %}
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {% javascripts
        '@OpitOpitHrmCoreBundle/Resources/public/js/SearchForm.coffee'
        '@OpitOpitHrmTravelBundle/Resources/public/js/list.coffee'
    output='js/opithrmtravel/tr_list.js' filter='?yui_js' %}
        <script type="text/javascript" src="{{ asset_url }}" ></script>
    {% endjavascripts %}
{% endblock %}
