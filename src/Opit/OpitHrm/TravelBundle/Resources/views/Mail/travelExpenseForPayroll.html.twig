{% set currencyFormat = templateVars['currencyFormat']%}
{% set employee = templateVars['employee']%}
<body style="font-size:12px;font-family: 'Arial'">
    <table cellpadding="5" style="background: #0C090A; width: 400px; font-size: 12px; color: white; border-bottom: 1px solid #94c11c;">
        <tr>
            <td colspan="2"><font style="color:#94c11c; font-size: 13px;"><u>Employee info</u></font><br /></td>
        </tr>
        <tr>
            <td width="25%"><strong>Name:</strong></td>
            <td>{{ employee.employeeNameFormatted }}</td>
        </tr>
        <tr>
            <td><strong>Tax-ID:</strong></td>
            <td>{{ employee.taxIdentification }}</td>
        </tr>
        <tr>
            <td><strong>Bank name:</strong></td>
            <td>{{ employee.bankName }}</td>
        </tr>
        <tr>
            <td><strong>BAN:</strong></td>
            <td>{{ employee.bankAccountNumber }}</td>
        </tr>
    </table>

    <table cellpadding="5" style="background: #0C090A; width: 400px; font-size: 12px; color: white; border-bottom: 1px solid #94c11c;">
        <tr>
            <td colspan="2">
                <font style="color:#94c11c; font-size: 13px;"><u>Approved travel expense.</u></font><br />
            </td>
        </tr>
        <tr>
            <td width="35%"><strong>Travel Request Id:</strong></td>
            <td>{{ templateVars['travelExpense'].travelRequest.travelRequestId }}<br /></td>
        </tr>
        <tr>
            <td colspan="2">
                <table cellpadding="3" border="1" bordercolor="white" style="width: 100%; color: white; font-size: 12px; border-collapse: collapse; border-spacing: 0;">
                    <tr>
                        <td style="font-weight:bold; width: 35%;">Total per diem:</td>
                        <td>{{ templateVars['perDiem']['totalPerDiem']|number_format(currencyFormat.decimals, currencyFormat.dec_point, currencyFormat.thousands_sep) }} EUR</td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>
    {% include 'OpitOpitHrmCoreBundle:Mail:footer.html.twig' %}
</body>