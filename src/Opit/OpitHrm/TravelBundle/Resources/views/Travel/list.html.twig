{% extends 'OpitOpitHrmCoreBundle::layout.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    {% stylesheets
        '../app/Resources/public/css/list.scss'
        '@OpitOpitHrmTravelBundle/Resources/public/css/module.scss'
    output='css/opithrmtravel/list.css' filter='?yui_css,cssrewrite' %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}
{% block title %}
        Travel request list - {{ parent() }}
{% endblock %}
{% block body %}
<h1>Travel request list</h1>
{% include 'OpitOpitHrmTravelBundle:Travel:_searchForm.html.twig' with { 'order_field': 'id' } %}
<table id="list-controls-table">
    <tr>
        <td class="padding-left-0">
            <a href="{{ path('OpitOpitHrmTravelBundle_travel_show') }}"><button id="add" class="button"><i class="fa fa-plus-square fa-1x"></i>Add</button></a>
            <button id="delete" class="button delete"><i class="fa fa-trash-o fa-1x"></i>Delete</button>
        </td>
    </tr>
</table>
<div id="list-reply-message"></div>
<div id="travel_list">
    {% include 'OpitOpitHrmTravelBundle:Travel:_list.html.twig' %}
</div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {% javascripts
        '@OpitOpitHrmCoreBundle/Resources/public/js/SearchForm.coffee'
        '@OpitOpitHrmCoreBundle/Resources/public/js/StatusHistory.coffee'
        '@OpitOpitHrmTravelBundle/Resources/public/js/list.coffee'
    output='js/opithrmtravel/te_list.js' filter='?yui_js' %}
        <script type="text/javascript" src="{{ asset_url }}" ></script>
    {% endjavascripts %}
{% endblock %}