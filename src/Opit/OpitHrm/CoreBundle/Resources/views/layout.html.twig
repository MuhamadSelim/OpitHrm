{% extends '::base.html.twig' %}
{% block stylesheets %}
    {% stylesheets
        '@OpitOpitHrmCoreBundle/Resources/public/css/menu.scss'
    output='css/opithrmcore/main.css' filter='?yui_css, cssrewrite' %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {% javascripts
        '//ajax.aspnetcdn.com/ajax/jquery.validate/1.11.1/jquery.validate.min.js'
        '//ajax.aspnetcdn.com/ajax/jquery.validate/1.11.1/additional-methods.min.js'
        '@OpitOpitHrmCoreBundle/Resources/public/js/menu.coffee'
    output='js/opithrmcore/main.js' filter='?yui_js' %}
        <script type="text/javascript" src="{{ asset_url }}" ></script>
    {% endjavascripts %}
{% endblock %}
{% block header %}
    <header>
        <a href="{{ path('OpitOpitHrmUserBundle_user_show_infoboard') }}" id="siteLogo" class="float-left color-black text-decoration-none margin-bottom-20 margin-left-20 margin-top-10">
            {% if (application_name is defined and application_name != 'OPIT-HRM') %}
                <span class="display-block">{{ application_name is not empty ? application_name : 'OPIT-HRM' }}</span>
                <span></span>
            {% else %}
                <span class="display-block">
                    <img src="{{ asset('images/logo.png') }}" width="105" alt="" />
                </span>
            {% endif %}
        </a>
        <div id="notifications">
            <i class="fa fa-bell-o">
                <div class="round-border position-absolute display-none" id="unread-notifications-count"></div>
            </i>
            <div id="notifications-wrapper">
                <div id="notifications-content" class="display-none"></div>
            </div>
        </div>
        <div id="menuWrapper">
            {% include 'OpitOpitHrmCoreBundle:Navigation:_menu.html.twig' %}
        </div>
    </header>
{% endblock %}
{% block body %}{% endblock %}