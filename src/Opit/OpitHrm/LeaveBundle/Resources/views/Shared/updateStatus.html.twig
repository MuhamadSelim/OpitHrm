{% extends '::base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    {% stylesheets
        '../app/Resources/public/css/updateStatus.scss'
    output='css/opithrmleave/update_status.css' filter='?yui_css,cssrewrite' %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}
{% block body %}
<div class="align-center margin-bottom-10">
    <a href="{{ path('OpitOpitHrmUserBundle_user_show_infoboard') }}" id="siteLogo" class="text-decoration-none clearfix">
        <span class="display-block"><img src="{{ asset('images/logo.png') }}" width="105" alt="" /></span>
        <div class="clear"></div>
    </a>
</div>
<div id="request-status">
{% if 'post' == method %}
<h2>Leave request successfully updated: "{{ status }}".</h2>
<h4>
    You can go to <a href="{{ path('OpitOpitHrmUserBundle_user_show_infoboard') }}">OPIT-HRM</a> or simply close the tab.
</h4>
{% else %}
<h2>Update leave request: "{{ status }}".</h2>
<form method="post" action="{{ app.request.uri }}">
    <input type="submit" class="button" value="Update" />
</form>
</div>
{% endif %}
{% endblock %}
{% block footer %}{% endblock %}